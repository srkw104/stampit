= form_for @stamp do |f|
  - if @stamp.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stamp.errors.count, "error")} prohibited this stamp from being saved:"
      %ul
        - @stamp.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tournament_id
    = f.number_field :tournament_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :beacon_minor
    = f.number_field :beacon_minor
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :deleted
    = f.check_box :deleted
  .field
    = f.label :photo
    = f.file_field :photo
  .actions
    = f.submit 'Save'
